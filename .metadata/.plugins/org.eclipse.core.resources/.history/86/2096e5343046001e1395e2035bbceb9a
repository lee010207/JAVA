package ex01변수;

import java.util.Arrays;

public class EX {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int [] d = {2,2,3,3};
		int budget = 10;
		
		int answer = 0;
		int sum = 0;
		Arrays.sort(d);
		
        while(sum <= budget) {
			sum += d[answer];
			answer++;
			if(answer > d.length) {
				break;
			}
		}
		System.out.println(answer-1);
		System.out.println(sum);
//		if(d[0]+d[1] < budget) {
